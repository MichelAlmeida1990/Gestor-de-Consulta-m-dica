# Configurações do Sistema de Agendamento Médico

# Banco de Dados
DATABASE_URL="postgresql://usuario:senha@localhost:5432/agendamento_medico"
DB_HOST=localhost
DB_PORT=5432
DB_NAME=agendamento_medico
DB_USER=usuario
DB_PASSWORD=senha

# JWT
JWT_SECRET=sua_chave_secreta_jwt_aqui
JWT_EXPIRES_IN=24h

# Servidor
PORT=3000
NODE_ENV=development

# Email (opcional - para notificações)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=seu_email@gmail.com
EMAIL_PASS=sua_senha_app

# Configurações da Clínica
CLINICA_NOME="Clínica Médica Exemplo"
CLINICA_ENDERECO="Rua Exemplo, 123 - São Paulo/SP"
CLINICA_TELEFONE="(11) 99999-9999"
CLINICA_EMAIL="contato@clinica.com"

# Configurações de Agendamento
HORARIO_FUNCIONAMENTO_INICIO="08:00"
HORARIO_FUNCIONAMENTO_FIM="18:00"
TEMPO_ANTECEDENCIA_MINIMO_HORAS=24
TEMPO_ANTECEDENCIA_MAXIMO_HORAS=720
MAX_CONSULTAS_DIA_MEDICO=20

# Configurações de Notificação
ENVIAR_EMAIL_NOTIFICACOES=true
ENVIAR_SMS_NOTIFICACOES=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
